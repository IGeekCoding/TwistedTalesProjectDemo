<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple">

    <!-- Background image -->
    <ImageView
        android:id="@+id/tt_home_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tt_home_screen"
        android:scaleType="centerCrop" />

    <!-- Transparent overlay (e.g., dim the background) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#993C0045" />

    <!-- ScrollView with transparent background -->
    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="start">

            <!-- Settings title -->
            <TextView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:fontFamily="serif"
                android:textSize="30sp"
                android:textColor="#FFE9BE"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Text Speed Section -->
            <TextView
                android:id="@+id/labelTextSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Speed"
                android:fontFamily="serif"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#E7FD9F"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSpeedSlow"
                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:text="Slow"
                    android:fontFamily="serif"
                    android:textSize="20sp"
                    android:textColor="#FDDD9F"
                    android:background="@drawable/tt_green_button" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSpeedMedium"
                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:text="Medium"
                    android:fontFamily="serif"
                    android:textSize="20sp"
                    android:textColor="#FDDD9F"
                    android:background="@drawable/tt_blue_button" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSpeedFast"
                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:text="Fast"
                    android:fontFamily="serif"
                    android:textSize="20sp"
                    android:textColor="#FDDD9F"
                    android:background="@drawable/tt_red_button" />
            </LinearLayout>

            <!-- Text Size Section -->
            <TextView
                android:id="@+id/labelTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Size"
                android:fontFamily="serif"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#E7FD9F"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSizeSmall"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Small"
                    android:fontFamily="serif"
                    android:textSize="16sp"
                    android:textColor="#FDDD9F"
                    android:background="@drawable/tt_green_button" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSizeMedium"
                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:text="Medium"
                    android:fontFamily="serif"
                    android:textSize="20sp"
                    android:textColor="#FDDD9F"
                    android:background="@drawable/tt_blue_button" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSizeBig"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Big"
                    android:fontFamily="serif"
                    android:textSize="30sp"
                    android:textColor="#FDDD9F"
                    android:background="@drawable/tt_red_button" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
